<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:brendacarpinteria"
        xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" x:Class="brendacarpinteria.Ver_facturas"
        mc:Ignorable="d"
        Title="Ver_facturas" Height="695.6" Width="736.8" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Buscar" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="639,16,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cobbus" HorizontalAlignment="Left" Margin="245,31,0,0" VerticalAlignment="Top" Width="150" Height="24" Background="#FFFF5200" >
            <ComboBoxItem Content="Id de Factura" IsSelected="True"/>
            <ComboBoxItem Content="Nombre del Empleado"/>
            <ComboBoxItem Content="Nombre del Cliente"/>
            <ComboBoxItem Content="Fecha"/>
            <ComboBoxItem Content="Id de Producto"/>
        </ComboBox>

        <WindowsFormsHost HorizontalAlignment="Left" Height="205" Margin="10,128,0,0" VerticalAlignment="Top" Width="704" GotMouseCapture="WindowsFormsHost_GotMouseCapture">
            <Forms:DataGridView x:Name="dgvFactura" CellMouseClick="dgvFactura_CellMouseClick"/>

        </WindowsFormsHost>
        <WindowsFormsHost HorizontalAlignment="Left" Height="205" Margin="10,368,0,0" VerticalAlignment="Top" Width="704">
            <Forms:DataGridView x:Name="dgvDetalles" />

        </WindowsFormsHost>
        <Label Content="Detalle de la factura" HorizontalAlignment="Left" Margin="296,338,0,0" VerticalAlignment="Top"/>
        <Label Content="ID de factura selecionada:" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtidfactura" HorizontalAlignment="Left" Height="23" Margin="208,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="Txtidfactura_TextChanged" IsEnabled="False"/>
        <Button Content="Refrescar facturas" HorizontalAlignment="Left" Margin="630,92,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
